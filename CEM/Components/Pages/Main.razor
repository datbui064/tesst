@page "/"
@using CEM.Components.Layout
@using Radzen
@inject NavigationManager NavigationManager
@layout ChinhLayout
@rendermode InteractiveServer

<style>
    html, body {
        height: 100%;
        margin: 0;
        font-family: 'Arial', sans-serif;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #a8e0f9, #f7c6c7);
    }

    .login-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        background: linear-gradient(135deg, #a8e0f9, #f7c6c7);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
        border-radius: 20px;
        padding: 40px;
        color: #333;
        text-align: center;
        perspective: 1000px;
        overflow: hidden;
        transform-style: preserve-3d; /* Để tạo hiệu ứng 3D */
    }

    h1 {
        margin: 0;
        color: #4a4a4a;
        font-size: 3rem;
        font-weight: bold;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
        transform: rotateY(10deg); /* Thêm hiệu ứng xoay */
        animation: blink 1.5s infinite; /* Thêm hiệu ứng nhấp nháy */
    }

  

    h2 {
        margin: 10px 0;
        color: #666;
        font-size: 1.8rem;
        font-weight: normal;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
    }

    button {
        padding: 15px 30px;
        font-size: 16px;
        border: none;
        border-radius: 8px;
        background: #ff6f61;
        color: white;
        cursor: pointer;
        transition: transform 0.2s, box-shadow 0.2s;
        transform: translateZ(20px);
    }

    button:hover {
        transform: translateZ(30px) scale(1.05); /* Thêm hiệu ứng phóng to */
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.3);
    }

    button:active {
        transform: translateZ(10px);
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
    }
</style>

<div class="login-container">
    <h1>Chào mừng đến với CEM</h1>
    <h2>Quản Lý Hồ Sơ Bài</h2>
    <button @onclick="OnLoginClick">
        Bắt Đầu
    </button>
</div>

@code {
    private void OnLoginClick()
    {
        Console.WriteLine("Nút đăng nhập đã được nhấn.");
        NavigationManager.NavigateTo("/Account/Login");
    }
}
