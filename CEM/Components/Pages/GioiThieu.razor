        .team-section-scrollable-wrapper-horizontally-aligned-cards {
            display: flex;
            justify-content: center; /* Căn giữa tất cả các thẻ */
            gap: 15px; /* Khoảng cách nhỏ giữa các thẻ */
            flex-wrap: wrap; /* Đảm bảo khi không đủ không gian, các thẻ sẽ xuống hàng */
            padding: 20px; /* Khoảng cách từ viền ngoài */
        }

        .team-member-card-container-with-spacing-and-padding {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
            padding: 20px;
            width: 220px; /* Đảm bảo kích thước cố định */
            transition: transform 0.3s ease-in-out;
        }

            .team-member-card-container-with-spacing-and-padding:hover {
                transform: translateY(-5px); /* Hiệu ứng hover nhẹ */
            }

        .team-member-image-wrapper-for-photo-display img {
            width: 100px; /* Đảm bảo kích thước hình ảnh */
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            margin: 0 auto 10px;
        }

        .team-member-details-container-with-text-alignment h5 {
            font-size: 1.2rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 5px;
        }

        .team-member-details-container-with-text-alignment p {
            font-size: 0.9rem;
            color: #666;
            margin: 0;
        }

        .team-member-social-links-wrapper-for-sharing-icons a {
            display: inline-flex; /* Thêm inline-flex để căn giữa biểu tượng */
            align-items: center;
            justify-content: center;
            width: 36px; /* Cố định kích thước */
            height: 36px;
            border-radius: 50%; /* Làm tròn biểu tượng */
            background-color: #007bff; /* Màu nền cho biểu tượng */
            color: #fff; /* Màu biểu tượng */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Tạo hiệu ứng nổi */
            transition: all 0.3s ease-in-out;
        }

            .team-member-social-links-wrapper-for-sharing-icons a:hover {
                background-color: #0056b3; /* Đổi màu nền khi hover */
                transform: scale(1.2); /* Phóng to biểu tượng nhẹ khi hover */
                box-shadow: 0 6px 10px rgba(0, 0, 0, 0.2); /* Tăng hiệu ứng bóng khi hover */
            }

            .team-member-social-links-wrapper-for-sharing-icons a i {
                transition: transform 0.3s ease;
              
            }

            .team-member-social-links-wrapper-for-sharing-icons a:hover i {
                transform: rotate(10deg); /* Xoay biểu tượng khi hover */
